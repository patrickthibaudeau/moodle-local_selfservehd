<div class="container-fluid">
    <div class="row">
        <div class="col-10" style="margin-left: -15px;">
            {{#siteurl}}
            <div class="embed-responsive embed-responsive-16by9">
                <iframe class="embed-responsive-item" src="{{{siteurl}}}" allowfullscreen></iframe> 
            </div>
            {{/siteurl}}
            {{^siteurl}}
            <h1 class="mt-5">{{#str}}no_site_url_defined, local_selfservehd{{/str}}</h1>
            {{/siteurl}}
        </div>
        <div class="col-2">
            <div class="card mt-2" style="margin-left: -15px; margin-right: -15px;">
                <div class="card-header">
                    <h4>{{#str}}in_coming_requests, local_selfservehd{{/str}}</h4>
                </div>
                <div class="card-body">
                    <div id="alertsContainer">
                        {{> local_selfservehd/faq_alerts}}
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


{{#js}}
require(['local_selfservehd/agent'], function(mod) {
mod.init();
});
{{/js}}
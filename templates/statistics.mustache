
<div class="row">
    <div class="col">
        <h2>{{#str}}statistics, local_selfservehd{{/str}} 
            <span class="float-right">
                <a href="../index.php" class="btn btn-outline-primary" title="{{#str}}dashboard, local_selfservehd{{/str}} ">
                    {{#str}}dashboard, local_selfservehd{{/str}} 
                </a>
            </span>
        </h2>
    </div>
</div>
<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-header">
                <h3>{{#str}}calls_per_room, local_selfservehd{{/str}}</h3>
            </div>
            <div class="card-body">
                {{{callsToRoom}}}
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card">
            <div class="card-header">
                <h3>{{#str}}number_of_calls_answered, local_selfservehd{{/str}}</h3>
            </div>
            <div class="card-body">
                {{{agents}}}
            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col">
        <div class="card">
            <div class="card-header">
                <h3>{{#str}}response_times, local_selfservehd{{/str}}</h3>
            </div>
            <div class="card-body">                
                    <div class="card-deck">                    
                        <div class="card">
                            <div class="card-body text-center" >
                                <h3>{{#str}}total_calls, local_selfservehd{{/str}}</h3>
                                <h2>{{{totalCalls}}}</h2>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-body text-center" >
                                <h3>{{#str}}average_time_to_reply, local_selfservehd{{/str}}</h3>
                                <h2>{{{averageResponse}}}</h2>
                            </div>
                        </div>
                        <div class="card">
                        <div class="card-body text-center">
                            <h3>{{#str}}shortest_time_to_reply, local_selfservehd{{/str}}</h3>
                            <h2 style="color: green;">{{{shortestResponse}}}</h2>
                        </div>
                        </div>
                        <div class="card">
                        <div class="card-body text-center">
                            <h3>{{#str}}longest_time_to_reply, local_selfservehd{{/str}}</h3>
                            <h2 style="color: red;">{{{longestResponse}}}</h2>
                        </div>
                        </div>                
            </div>
        </div>
    </div>
</div>
</div>
</div>
